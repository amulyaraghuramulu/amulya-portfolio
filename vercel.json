{
  "functions": {
    "api/contact.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "EMAIL_USER": "@email_user",
    "EMAIL_APP_PASSWORD": "@email_app_password", 
    "OWNER_EMAIL": "@owner_email"
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/frontend/index.html"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/frontend/assets/$1"
    },
    {
      "source": "/styles.css",
      "destination": "/frontend/styles.css"
    },
    {
      "source": "/script.js",
      "destination": "/frontend/script.js"
    }
  ]
} 
